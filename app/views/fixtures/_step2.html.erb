<div class="step-content <%= 'is-active' if @step == 2 %>">
    <div class="field">
        <div class="control">
            <div class="columns has-text-centered">

                <%= f.fields_for :detailings, @fixture.detailings.order(:detailing_type) do |p| %>
                    
                    <div class="column <%= 'is-3 is-offset-3' if @fixture.has_single_detailing && p.object.newmatch? %>
                 
                          
                        <label for="" class="label"> Create New Fixture</label>
                       

                        <div class="control">
                            <%= p.text_field :title, placeholder: "Club Name", class: "input is-radiusless" %>
                        </div>

                        <div class="control">
                            <%= p.text_area :description, placeholder: "Description of Fixture", class: "textarea is-radiusless" %>
                        </div>

                        <div class="control has-icons-right">
                            <%= p.number_field :match_time, placeholder: "Fixture is to be played in how many days ", class: "input is-radiusless", default: 1 %>
                            <span class="icon is-small is-right"></span>
                        </div>

                        <div class="control has-icons-right">
                            <%= p.number_field :age, placeholder: "The Team is Under 13's ", class: "input is-radiusless", default: 1 %>
                            <span class= "icon is-small is-right"></span>
                        </div>

                    </div>
                    
            <% end %>
             
            </div>
        </div>
     </div>
</div>