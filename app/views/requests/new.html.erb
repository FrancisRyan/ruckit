<section class="section">
    <div class="container">
        <div class="form-container">
                <p class="title is-4 has-text-centered">Create your Challenge</p>
<p class="subtitle has-text-centered">Give details of what kind of challenge your looking for </p>

            <%= form_for @request do |f| %>
                <div class="field">
                    <label class="label">Club Name(*)</label>
                    <%= f.text_field :title, placeholder: "Club Name ", class: "input" %>
                </div>
                <div class="field">
                    <label class="label">Challenge Description (*)</label>
                    <%= f.text_area :description, placeholder: "I'm looking for a friendly against a mixed aged team of new players", class: "textarea" %>
                </div>
                <div class="field">
                    <label class="label">Choose a age category</label>
                    <div class="select is-fullwidth">
                        <%= f.select(:category_id, options_for_select(@categories.map { |c| [c.name, c.id] })) %>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Location of fixture</label>
                    <%= f.text_area  :location, placeholder: "we can travel any where in Munster", class: "textarea" %>
                </div>
                <div class="field">
                    <label class="label">Age</label>
                    <%= f.number_field :age, placeholder: "Under 13's", class: "input" %>
                </div>
                <div class="field">
                    <label class="label">Upload attachment (Optional)</label>
                    <div class="file is-warning has-name">
                        <label class="file-label">
                            <%= f.file_field :attachment_file, class: "file-input" %>
                            <span class="file-cta"><span class="file-label">Choose a file...</span></span>
                            <span class="file-name" id="file-name">No file selected</span>
                        </label>
                    </div>
                </div>

                <div class="field has-text-centered">
                    <%= f.submit 'Post Request', class: "button is-primary" %>
                </div>
              
            <% end %>
        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
        var file = $('.file-input');
        file.change(function(e) {
            if (file[0].files.length > 0) {
                var attachment = file[0].files[0];
                $('.file-name').text(attachment.name + " (" + attachment.size + " bytes)");
            }
        })
    })
</script>
